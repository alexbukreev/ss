      "name": "layer_1",
      "x": 100,
      "y": 100,
      "text": "Новый текст",
      "fontFamily": "Georgia, serif",
      "fontSize": 136,
      "fontStyle": "",
      "fill": "green",
      "align": "left",
      "verticalAlign": "top",
      "padding": 0,
      "lineHeight": 1.25,
      "letterSpacing": 0,
      "width": 900
    },
    "RECT": {
      "x": 40, "y": 40,
      "width": 600, "height": 300,
      "fill": "green",
      "stroke": null,
      "strokeWidth": 0,
      "cornerRadius": 0,
      "opacity": 1
    },
    "IMAGE": {
      "x": 40, "y": 40, "w": null, "h": null
    },
    "QR": {
      "name": "layer_2",
      "x": 140, "y": 40, "size": 300, "text": "https://example.com"
    }
  },
  "DEFAULT_CARD_LAYERS": [
    {
      "type": "text",
      "name": "layer_1",
      "x": 40,
      "y": 1600,
      "text": "New text",
      "fontSize": 155,
      "fill": "red",
      "align": "left",
      "fontFamily": "Georgia, serif",
      "lineHeight": 1.25,
      "letterSpacing": 0,
      "width": 900,
      "rotation": -90
    },
    {
      "type": "text",
      "x": 65,
      "y": 1900,
      "text": "Subtitle",
      "fontSize": 65,
      "fill": "#000000",
      "width": 900
    },
    { "type": "rect", "x": 40, "y": 40, "width": 600, "height": 120, "fill": "#000000", "opacity": 0.35 },
    { "type": "qr",  "name": "layer_2", "x": 40, "y": 40, "size": 256, "text": "https://..." }
  ],
